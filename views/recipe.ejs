        </div>

        <div style="padding: 4% 8% 4% 8%;">
            <div class="row grid-container-recipe">
                <div class="ingredients item-one-recipe">
                    <h2>Ingredients:</h2>
                    <ul style="list-style-position: inside;">
                        <% recipe.ingredients.forEach(function(ingredient){ %>
                        <li><%= ingredient %></li>
                        <% }) %>
                    </ul>
                    <h3>Preparation time: <%= recipe.preptime %> minutes</h3>
                    <h3>Servings: <%= recipe.servings %> </h3>
                    <h3>Category: <%= recipe.category %> </h3>
                </div>
                <div class="image-square item-two-recipe image-tile" style="padding-right: 10%;">
                    <img src="<%= recipe.image %>" alt="<%= recipe.recipeid %>">
                </div>

            </div>
        </div>

        <div class="row">
            <div class="method">
                <h2>Method:</h2>
                <ol style="list-style-position: inside;">
                    <% recipe.methoditems.forEach(function(methoditem){ %>
                    <li><%= methoditem %></li>
                    <% }) %>
                </ol>
            </div>
            <div class="post-tags">
                <h2>Tags:</h2>
                <% recipe.tags.forEach(function(tag){ %>
                <span><a href="/recipes/tags/<%= tag.replace(/[^a-zA-Z\s]+/g, ' ') %>"> <%= tag %> </a></span>
                <% }); %>
            </div>

        </div>



    </div>

