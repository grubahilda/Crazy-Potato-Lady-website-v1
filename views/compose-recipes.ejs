<%- include("partials/header") -%>

<body style="background-color: 	#b7eae3">



    <!-- START NAVBAR -->
    <%- include("partials/navbar"); -%>
    <!-- END NAVBAR -->

    <div class="container-fluid">
        <div class="row">
            <h1 class="page-title">Compose a new recipe</h1>
        </div>
        <div class="row justify-content-center col-12">
            <form method="post" action="/compose-recipes">
                <input class="new-recipe-title" type="text" name="recipeTitle" placeholder="New recipe title">
                <br>
                <label for="category">Category: </label>
                <select name="category" id="category">
                    <option value="breakfast">Breakfast</option>
                    <option value="dinner">Dinner</option>
                    <option value="dessert">Dessert</option>
                </select>
                <br>
                <label for="prepTime">Prep Time:</label>
                <!-- for this add ::after to show minues or sth -->
                <input id="prepTime" class="new-recipe-title" type="text" name="prepTime" style="width: 35px;">
                <label for="servings">Servings:</label>
                <input id="servings" class="new-recipe-title" type="text" name="servings" style="width: 35px;">
                <br>
                <!-- add button to add more ingredients, initial 2? -->
                <br>
                <fieldset id="fieldIngredients">
                    <legend>Ingredients:</legend>
                    <input type="text" placeholder="Ingredient">
                    <input type="text" placeholder="Amount">
                    <select name="" id="">
                        <option value="piece">Piece</option>
                        <option value="ml">ml</option>
                        <option value="g">g</option>
                    </select>
                    <button class="addIngredientButton" onclick="addIngredient()">+</button>
                </fieldset>

                <!-- <input type="file" accept="image/*" name="recipePictureFile" id="recipeFile">
                <br> -->
                <!-- <input type="image" src="" height="100px" alt="Submit">
                <br> -->
                <textarea name="recipeBody" class="tinymce"></textarea>
                <br>
                <input class="new-recipe-title" type="text" name="recipeTags" placeholder="Tags">
                <button class="submit-new-recipe" type="submit">Recipe</button>
            </form>
        </div>
    </div>

    <script type="text/javascript" src="/tinymce/plugin/tinymce.min.js"></script>
    <script type="text/javascript" src="/tinymce/init-tinymce.js"></script>

    <%- include("partials/footer") -%>